{
  "name": "esbuild-react-app-template",
  "version": "0.1.0",
  "description": "JS-template for esbuild-react-app",
  "scripts": {
    "start": "esbuild src/App.jsx --bundle --sourcemap --outfile=src/bundle.js --define:process.env.NODE_ENV='production'",
    "build": "esbuild src/App.jsx --bundle --minify --define:process.env.NODE_ENV='production' --outfile=src/bundle.js"
  },
  "license": "MIT",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "esbuild": "^0.8.6"
  }
}
